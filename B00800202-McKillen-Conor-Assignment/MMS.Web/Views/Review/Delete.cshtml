@model Review

<partial name="_BreadCrumbs" model=@(new [] { ("/", "Home"), ("/movie", "Movies"), ($"/movie/details/{Model.MovieId}", $"{Model.MovieId}"), ("", "Delete Review")})>

<div>
    <div class="col card rounded shadow pt-3">
        
        <h3 class="mb-4">Delete Review</h3>
        
        <h5 class="mb-4">Are you sure you want to delete this review?</h5>
        
        <dl class="row">
            <dt class="col-5">Movie</dt>
            <dd class="col-7">@Model.Movie</dd>

            <dt class="col-5">Name</dt>
            <dd class="col-7">@Model.Name</dd>

            <dt class="col-5">CreatedOn</dt>
            <dd class="col-7">@Model.CreatedOn</dd>

            <dt class="col-5">Comment</dt>
            <dd class="col-7">@Model.Comment</dd>

            <dt class="col-5">Rating</dt>
            <dd class="col-7">@Model.Rating</dd>
        </dl>
    </div>
    
    <div class="mt-4">
        <form asp-controller="Review" asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for=@Model.Id />
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-link" asp-controller="Review" asp-action="Index">Cancel</a>
        </form>
    </div>
    

</div>
