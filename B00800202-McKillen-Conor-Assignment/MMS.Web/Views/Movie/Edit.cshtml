@model Movie

<partial name="_Breadcrumbs" model=@(new [] {
    ("/", "Home"),
    ("/movie", "Movies"),
    ($"/movie/details/{Model.Id}", $"{Model.Id}"),
    ("","Edit")
})>

  

    <div class="card rounded shadow p-3">

        <h3 class="mb-4">Edit Movie</h3>

        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- we hide the id as its not user editable but needs to be in the -->
            <!-- form to ensure the student passed to the controller is complete -->
            <input type="hidden" asp-for="Id" class="form-control" />

            <!-- add form groups for each student attributed being edited -->

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Director" class="control-label"></label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>

           
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            

            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <!-- add PhotoUrl input group - ensure input field type is url -->
            <div class="form-group">
                <label asp-for="PosterUrl" class="control-label"></label>
                <input type="url" asp-for="PosterUrl" class="form-control" />
                <span asp-validation-for="PosterUrl" class="text-danger"></span>
            </div>

            <!----  you can copy the necessary groups from Create.cshtml --->
            <!-- submit button and cancel link which navigates to Index action -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
